<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    
    <!--==========================================  Объявление фильтров  ==========================================-->
    <filter>
        <filter-name>CharEncoding</filter-name>
        <filter-class>ru.dreamjteam.servlets.CharEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter>
	<filter-name>NewOrdersFilter</filter-name>
	<filter-class>ru.dreamjteam.servlets.NewOrdersFilter</filter-class>
    </filter>
    
    <!--==========================================  Объявление сервлетов  ==========================================-->
    <servlet>
        <servlet-name>CreateCarType</servlet-name>
        <servlet-class>ru.dreamjteam.servlets.CreateCarTypeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateCar</servlet-name>
        <servlet-class>ru.dreamjteam.servlets.CreateCarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateOrder</servlet-name>
        <servlet-class>ru.dreamjteam.servlets.CreateOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditCarType</servlet-name>
        <servlet-class>ru.dreamjteam.servlets.EditCarTypeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditCar</servlet-name>
        <servlet-class>ru.dreamjteam.servlets.EditCarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditOrder</servlet-name>
        <servlet-class>ru.dreamjteam.servlets.EditOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCarType</servlet-name>
        <servlet-class>ru.dreamjteam.servlets.DeleteCarTypeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCar</servlet-name>
        <servlet-class>ru.dreamjteam.servlets.DeleteCarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteOrder</servlet-name>
        <servlet-class>ru.dreamjteam.servlets.DeleteOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewCarTypeList</servlet-name>
        <servlet-class>ru.dreamjteam.servlets.ViewCarTypeListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewCarList</servlet-name>
        <servlet-class>ru.dreamjteam.servlets.ViewCarListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewOrderList</servlet-name>
        <servlet-class>ru.dreamjteam.servlets.ViewOrderListServlet</servlet-class>
    </servlet>
    
    <!--==========================================  Подключение сервлетов  ==========================================-->
    <servlet-mapping>
        <servlet-name>CreateCar</servlet-name>
        <url-pattern>/CreateCar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateCarType</servlet-name>
        <url-pattern>/CreateCarType</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateOrder</servlet-name>
        <url-pattern>/CreateOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditCar</servlet-name>
        <url-pattern>/EditCar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditCarType</servlet-name>
        <url-pattern>/EditCarType</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditOrder</servlet-name>
        <url-pattern>/EditOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCar</servlet-name>
        <url-pattern>/DeleteCar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCarType</servlet-name>
        <url-pattern>/DeleteCarType</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteOrder</servlet-name>
        <url-pattern>/DeleteOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewCarList</servlet-name>
        <url-pattern>/ViewCarList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewCarTypeList</servlet-name>
        <url-pattern>/ViewCarTypeList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewOrderList</servlet-name>
        <url-pattern>/ViewOrderList</url-pattern>
    </servlet-mapping>
    
    <!--==========================================  Подключение фильтров  ==========================================-->
    <filter-mapping>
        <filter-name>CharEncoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
	<filter-name>NewOrdersFilter</filter-name>
	<url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!--==========================================  EJB ref  ==========================================-->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <ejb-local-ref>
        <ejb-ref-name>CarEntityBean</ejb-ref-name>
        <ejb-ref-type>Entity</ejb-ref-type>
        <local-home>ru.dreamjteam.entity.CarEntityBeanLocalHome</local-home>
        <local>ru.dreamjteam.entity.CarEntityBeanLocal</local>
        <ejb-link>TaxiEJB2-ejb.jar#CarEntityBean</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>OrderEntityBean</ejb-ref-name>
        <ejb-ref-type>Entity</ejb-ref-type>
        <local-home>ru.dreamjteam.entity.OrderEntityBeanLocalHome</local-home>
        <local>ru.dreamjteam.entity.OrderEntityBeanLocal</local>
        <ejb-link>TaxiEJB2-ejb.jar#OrderEntityBean</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>CarTypeEntityBean</ejb-ref-name>
        <ejb-ref-type>Entity</ejb-ref-type>
        <local-home>ru.dreamjteam.entity.CarTypeEntityBeanLocalHome</local-home>
        <local>ru.dreamjteam.entity.CarTypeEntityBeanLocal</local>
        <ejb-link>TaxiEJB2-ejb.jar#CarTypeEntityBean</ejb-link>
    </ejb-local-ref>
</web-app>
